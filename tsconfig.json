{
    "compilerOptions": {        
        "module": "CommonJS",
        "target": "es2015",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ]
}